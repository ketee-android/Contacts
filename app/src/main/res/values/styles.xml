<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationViewStyle">
        <item name="android:background">@color/color_primary</item>
        <item name="itemIconTint">@drawable/bottom_menu_item_color</item>
        <item name="itemTextColor">@drawable/bottom_menu_item_color</item>
        <item name="itemRippleColor">@color/color_secondary</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="menu">@menu/bottom_menu</item>
    </style>

    <style name="contactsTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconCheckable">true</item>
        <item name="endIconDrawable">@drawable/ic_clear</item>
        <item name="endIconMode">custom</item>
        <item name="boxStrokeColor">@drawable/input_layout_color</item>
        <item name="endIconTint">@drawable/input_layout_color</item>
        <item name="hintTextColor">@drawable/input_layout_color</item>
        <item name="android:hint">@string/input_layout_hint</item>
    </style>
</resources>